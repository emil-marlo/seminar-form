<%- include("partials/header.ejs"); %>

<form action="/" method="post">
  <div class="formHeading">
    <h1 class="formH1">Form Heading</h1>
    <p class="formDetails">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
    <hr class="my-4">
  </div>

  <div class="formSubHeading">
    <h2 class="captionHeader"><i class="fas fa-user-alt"></i> Personal Information</h2>
    <label class="col-form-label-sm">Full Name <span style="color:red">*</span></label>
    <input type="text" class="form-control" name="fullName" autofocus required>
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Email Address <span style="color:red">*</span></label>
    <input type="email" class="form-control" name="email" required>
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Position <span style="color:red">*</span></label>
    <input type="text" class="form-control" name="position">
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Division <span style="color:red">*</span></label>
    <select class="form-control" id="divSelection" name="division">
    <option value="NaN">--None--</option>
    <option value="CCD">RLC Commercial Centers Division</option>
    <option value="IID">RLC Integrated Infrastructure Division</option>
    <option value="Head Office">RLC Main</option>
    <option value="RD">RLC Residential Division</option>
    <option value="OBD">RLC Office Building Division</option>
    <option value="Homes">RLC Robinsons Homes</option>
    <option value="RHR">RLC Robinsons Hotels and Resorts</option>
    </select>
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Department <span style="color:red">*</span></label>
    <!-- <p class="dept"></p> -->
    <select class="form-control dept" name="dept">
      <option value="">None</option>
    </select>

    <!-- <select class="form-control dept" id="CCD" name="ccdDepartment">
      <option value="Accounting">CCD - Accounting</option>
      <option value="Engineering">CCD - Engineering</option>
    </select>

    <select class="form-control dept" id="RD" name="department">
      <option value="Accounting">RD - Accounting</option>
    </select> -->
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Date Regularized <span style="color:red">*</span></label>
    <input type="date" class="form-control dateField" name="">
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Length of Service <span style="color:red">*</span>: <span id="numberOfRange"></span> <span id="yrLabel"></span> </label>
    <input type="range" id="yrsOfService" class="form-control-range" list="tickmarks" name="" step=".1"  min="0" max="20" value="1">

    <datalist id="tickmarks">
      <option value="0" label="0">
      <option value="5">
      <option value="10">
      <option value="15" label="15">
      <option value="20" label="20">
  </datalist>

  <hr class="my-4">
  </div>
  <!-- /**************************************** DETAILS ********************************/ -->
  <div class="formSubHeading">
    <h2 class="captionHeader"><i class="fas fa-info-circle"></i> Details</h2>
    <label class="col-form-label-sm">Type of Service <span style="color:red">*</span></label>
    <div class="row radioRow">
      <div class="custom-control custom-radio custom-control-inline">
        <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
        <label class="custom-control-label radioLabel" for="customRadioInline1">Local</label>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
        <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
        <label class="custom-control-label radioLabel" for="customRadioInline2">Abroad</label>
      </div>
    </div>
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Topic <span style="color:red">*</span></label>
    <input type="text" class="form-control topicField" name="">
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Amount <span style="color:red">*</span></label>
    <div class="row radioRow">
      <select class="form-control currency custom-select mr-sm-2" id="inlineFormCustomSelect">
       <option selected>Choose...</option>
       <option value="1">PHP</option>
       <option value="2">USD</option>
     </select>
     <input type="text" class="form-control amountField" name="" value="" placeholder="Enter amount here..">
    </div>
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Venue <span style="color:red">*</span></label>
    <input type="text" class="form-control" name="">
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Schedule <span style="color:red">*</span></label>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <label class="col-form-label-sm">Start Date</label>
      </div>
      <div class="col-md-6 col-sm-6">
        <label class="col-form-label-sm">End Date</label>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <input type="date" class="form-control" name="" value="">
      </div>
      <div class="col-md-6 col-sm-6">
        <input type="date" class="form-control" name="" value="">
      </div>
    </div>
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Justification <span style="color:red">*</span></label>
    <textarea name="name" class="form-control topicField" rows="3" cols="80"></textarea>
  </div>

  <div class="formSubHeading">
    <label class="col-form-label-sm">Proof of Invitation <em>(Please attach Brochure/Proposal/Invitation)</em> <span style="color:red">*</span></label>
    <div class="row radioRow">
      <input type="file" name="" id="file-1" class="inputfile" value="">
      <label for="file-1"><i class="fas fa-upload"></i> <span id="filename">Choose a file</span> </label>
    </div>
  </div>

  <div class="formSubHeading">
    <button type="submit" class="btn btn-primary" name="submitForm">Submit</button>
  </div>

</form>

<!-- //include footer.ejs here -->
<%- include("partials/footer.ejs"); %>
